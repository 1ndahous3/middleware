case $2 in
/*/*)	NANO_CFG_BASE=$(dirname $2)
	NANO_SRC=`pwd | sed 's/.tools.tools.nanobsd.*//'`
	;;
*/*)	NANO_CFG_BASE=$(dirname `pwd`/$2)
	NANO_SRC=`pwd | sed 's/.tools.tools.nanobsd.*//'`
	;;
*)	NANO_CFG_BASE=`pwd`
	NANO_SRC=`realpath $0 | sed 's/.tools.tools.nanobsd.*//'`
	;;
esac
NANO_NAME=freenas32-8
NANO_OBJ=/tmp/${LOGNAME}/obj.freenas32
NANO_KERNEL=${NANO_CFG_BASE}/FREENAS32
NANO_ARCH=i386

. ${NANO_CFG_BASE}/freenas-common
